@model da2.Data.GamesAndGenresAndPlatformsAndPublishers

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="game.Name" class="control-label"></label>
                <input asp-for="game.Name" class="form-control" name="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Rating" class="control-label"></label>
                <input asp-for="game.Rating" class="form-control" name="Rating" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Price" class="control-label"></label>
                <input asp-for="game.Price" class="form-control" name="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.PlatformId" class="control-label"></label>
                <select asp-for="game.PlatformId" class="form-control" name="PlatformId">
                    <option value="" selected disabled hidden>Choose here</option>
                    @foreach (var item in Model.Platforms)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="game.PlatformId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.PublisherId" class="control-label"></label>
                <select asp-for="game.PublisherId" class="form-control" name="PublisherId">
                    <option value="" selected disabled hidden>Choose here</option>
                    @foreach (var item in Model.Publishers)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.GenreId" class="control-label"></label>
                <select asp-for="game.GenreId" class="form-control" name="GenreId">
                    <option value="" selected disabled hidden>Choose here</option>
                    @foreach (var item in Model.Genres)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="game.GenreId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="game.IsMultiplayer" name="isMultiplayer" /> @Html.DisplayNameFor(model => model.game.IsMultiplayer)
                </label>
            </div>
            <div class="form-group">
                <div>
                    <label class="control-label">Password</label>
                </div>
                <div>
                    <input class="form-control" type="password" name="password" />
                </div>
                <input type="hidden" value=@Model.game.Id name="id">
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}